<?xml version="1.0" encoding="utf-8"?>
<!--
  Hardened default: exclude all app-managed data from Auto Backup on Android 11 and lower.
  Relax specific domains/paths only when backup requirements are explicitly defined.
-->
<full-backup-content>
    <exclude domain="root" path="." />
    <exclude domain="file" path="." />
    <exclude domain="database" path="." />
    <exclude domain="sharedpref" path="." />
    <exclude domain="external" path="." />
</full-backup-content>